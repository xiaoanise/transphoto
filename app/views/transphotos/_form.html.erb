<%= form_with model: @transphoto, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "Title" %><br />
    <%= f.text_area :title, id:"transphoto_title" %>
  </div>

  <div class="field">
    <%= f.label :from_to, "Language Pair" %><br />
    <%= f.text_area :from_to, class: :form__text, id:"transphoto_from_to" %>
  </div>

  <div class="field">
    <%= f.label :message, "Message" %><br />
    <%= f.text_area :message, class: :form__text, id:"transphoto_message" %>
  </div>

  <div class="field">
    <%= f.label :image, "Photo" %><br />
    <%= f.file_field :image, id:"transphoto_image" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: :form__btn  %>
  </div>
<% end %>