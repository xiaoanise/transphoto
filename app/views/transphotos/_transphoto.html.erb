<div class="card">
  <%= link_to image_tag(transphoto.image.variant(resize: '1000x1000'), class: :card__img ), transphoto_path(transphoto.id), method: :get%>
  <div class="card__body">
    <%= link_to "#{transphoto.title}", transphoto_path(transphoto.id), method: :get, class: :card__title%>
    <p class="card__summary">
      <%= link_to "#{transphoto.from_to}" %><br>
      <% if transphoto.comments.count == 0 %>
        <font color="red"><%= "#{transphoto.comments.count} translation" %></font>
      <% else %> 
        <%= "#{transphoto.comments.count} translation(s)" %>
      <% end %><br>
      <%= transphoto.updated_at.strftime("%Y-%m-%d %H:%M") %>
    </p>
    <%= link_to "by #{transphoto.user.nickname}", user_path(transphoto.user), class: :card__user %>
    <p class="actions">
      <%= link_to "Translate", transphoto_path(transphoto.id), class: :form__btn  %>
    </p>
  </div>
</div>
