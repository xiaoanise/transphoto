<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
      <div class="greeting">
        Hello~
        <%= link_to "#{current_user.nickname}", user_path(current_user), class: :greeting__link%>,
        simply upload the photo and its contents will be translated!
      </div>
    <% end %>
    <div class="card__wrapper">
      <%= render partial: 'transphoto', collection: @transphotos %>
    </div>
  </div>
</main>