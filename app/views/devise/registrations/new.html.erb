<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">New registration</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
         <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "Email address" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "Password（6 characters or more）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Password Confirmation" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :nickname, "Nickname" %><br />
          <%= f.text_field :nickname, id:"user_nickname" %>
        </div>

        <div class="field">
          <%= f.label :introduction, "Self introduction" %><br />
          <%= f.text_area :introduction, class: :form__text, id:"user_introduction" %>
        </div>

        <div class="field">
          <%= f.label :language, "Lanuage(s) you can speak" %><br />
          <%= f.text_area :language, class: :form__text, id:"user_language" %>
        </div>

        <div class="field">
          <%= f.label :hobby, "Hobby" %><br />
          <%= f.text_area :hobby, class: :form__text, id:"user_hobby" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>